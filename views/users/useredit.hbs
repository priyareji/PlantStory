 <div class="row">
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">
                  <div class="text-center">
                    <h6 class="mb-4" style="font-family: Arial, Helvetica, sans-serif; font-weight: bold; font-size: 1.2em;">Edit User</h6>
                </div>
             
                <form action="/edit-user" method="post">
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="name" name="name" class="form-control" id="inputEmail3" value="{{this.name}}" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" name="email" class="form-control" id="inputEmail3" value="{{this.email}}" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Mobile</label>
                        <div class="col-sm-10">
                            <input type="number" name="mobile" class="form-control" id="inputPassword3" value="{{this.mobile}}" required>
                        </div>
                    </div>
                    <fieldset class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0 mr-4">Verification</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="verify" id="gridRadios1" value="1"{{#if this.is_verified}}checked{{/if}} >
                                <label class="form-check-label" for="gridRadios1">
                                    Verified
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="verify" id="gridRadios2" value="0" {{#unless this.is_verified}}checked{{/unless}}>
                                <label class="form-check-label" for="gridRadios2">
                                    Not verified
                                </label>
                            </div>
                        </div>
                        <input class="form-check-input" type="hidden" name="id" value="{{this._id}}">
                    </fieldset>
                  
                   <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
                </form>


              </div>
            </div>
          </div>
          </div>
          