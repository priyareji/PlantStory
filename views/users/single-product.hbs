  <script> 
 function addToCart(productId, event) {
  event.preventDefault(); // Prevent the default behavior of the <a> tag

  // Send an AJAX request to the server
  const xhr = new XMLHttpRequest();
  xhr.open('POST', '/add-cart', true);
  xhr.setRequestHeader('Content-Type', 'application/json');
  xhr.onreadystatechange = function () {
    if (xhr.readyState === 4) {
      if (xhr.status === 200) {
        // Handle the success response here
        showSweetAlert("Success", "Product added to cart!", "success");
      } else if (xhr.status === 400) {
        // Handle the error response for out of stock
        showSweetAlert("Oops", "Product is out of stock", "error");
      } else {
        // Handle other error responses (if needed)
        console.log("Request error:", xhr.status);
      }
    }
  };

  xhr.send(JSON.stringify({ productId: productId }));
}

