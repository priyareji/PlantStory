<!-- Sidebar Start -->
        {{>adminheader}}
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
             {{>admin-navbar}}
<section class="content-main">
  <div class="content-header">
    <h2 class="content-title">Coupons </h2>
  </div>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-12">
          <header class="border-bottom mb-4 pb-4">
            <div class="row">
              <div class="col-lg-5 col-6">
                <div class="input-group">
                  <input type="text" placeholder="Search..." class="form-control">
                </div>
              </div>
              <div class="col-lg-5 col-6 d-flex justify-content-end">
                <button class="btn btn-primary btn-lg btn-block ml-50px" onclick="location.href='/admin/add-coupon';">
                  Create Coupons
                </button>

              </div>
            </div>
          </header>

        <div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        {{!-- <th>No:</th> --}}
        <th>Coupon Code</th>
        <th>Min Purchase Amount</th>
        <th>Discount %</th>
        <th>Max Discount Amount</th>
        <th>Usage COunt</th>
        <th>Expiry Date</th>
        <th class="text-end">Action</th>
      </tr>
    </thead>
  
<tbody>
                                 {{#each couponList}}
                                <tr>
                                   {{!-- <td>{{@index 0}}</td>  --}}
                                    <td>{{couponCode}}</td>
                                    <td>{{minPurchase}}</td>
                                    <td>{{minDiscountPercentage}}%</td>
                                    <td>{{maxDiscountValue}}</td>
                                    <td>{{useageCount}}</td>
                                     <td>
                                        {{validityFormatted }}
                                    </td> 
                           <td class="text-end">
          <button class="btn-sm btn-danger" onclick="removeCoupon('{{_id}}')">Remove</button>
                                           {{#if is_activate}}
                                    <a href="/admin/couponInactivate?id={{this._id}}" class="btn btn-success" onclick="return confirm('Are you sure you want to Inactivate {{couponCode}}?')">Active</a>
                                {{else}}
                                 <a href="/admin/couponActivate?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to Activate {{couponCode}}?')">Inactive</a>
                               {{/if}}
        </td>
                                      </tr>
                                   {{/each}}
                            </tbody>

  </table>
</div>
 <!-- table-responsive.// -->
 
        </div> <!-- col end// -->

      </div> <!-- row end// -->
    </div> <!-- card-body // -->
  </div> <!-- card end// -->
  <div class="pagination-area mt-30 mb-50">
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-start">
        <li class="page-item active"><a class="page-link" href="#">01</a></li>
        <li class="page-item"><a class="page-link" href="#">02</a></li>
        <li class="page-item"><a class="page-link" href="#">03</a></li>
        <li class="page-item"><a class="page-link dot" href="#">...</a></li>
        <li class="page-item"><a class="page-link" href="#">16</a></li>
        <li class="page-item"><a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a></li>
      </ul>
    </nav>
  </div>
</section>
</div>
<script>
  
  //to remove the Coupon
 function removeCoupon(couponId){
  $.ajax({
    url : '/admin/remove-coupon',
    method : 'delete',
    data : {
      couponId : couponId
    },
    success:(successResponse)=>{
      location.reload()
      
    }
  })
 }
</script>